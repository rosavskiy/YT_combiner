# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=30d

# Telegram Bot Configuration (для авторизации)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-from-botfather
TELEGRAM_BOT_USERNAME=your_bot_username
TELEGRAM_WEBHOOK_URL=https://yourdomain.com/api/telegram/webhook

# Database
DB_PATH=./database.sqlite

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=10

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com

# Google Sheets (если используется)
GOOGLE_SHEETS_ENABLED=false
GOOGLE_APPLICATION_CREDENTIALS=./google-credentials.json

# YouTube API
YOUTUBE_API_KEY=your-youtube-api-key

# OpenAI API (для Whisper транскрипции)
OPENAI_API_KEY=sk-your-openai-api-key

# N8N Integration (optional)
N8N_WEBHOOK_URL=https://your-n8n-server.com/webhook/video-parsed

# Video Processing
AUTO_PARSE_AFTER_DOWNLOAD=true

# Python Workers
PYTHON_WORKERS_PATH=../python-workers
